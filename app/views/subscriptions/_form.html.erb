<div class="modal-dialog">

  <div class="modal-content">
    <%= form_for @subscription, remote: true, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>

        <div class="form-group">
          <div id='acct_style'>Account Name:</div>
          <div class="input-group input-group-lg">
     <span class="input-group-addon">
        <span class="glyphicon glyphicon-envelope"></span>
      </span>
  <%= f.text_field :account_name, class: "form-control" %>

</div>
        </div>


<div class="form-group">
<div class="row">
  <div class="col-sm-6">
        <%= f.radio_button :timer, "On" %> On</div> <div class="col-sm-6"><%= f.radio_button :timer, "Off" %> Off</div>

</div>
</div>

      </div>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary",id:'submit_bts' %>
        <%= button_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>

